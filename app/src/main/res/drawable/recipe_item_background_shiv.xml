<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"></corners>
            <stroke
                android:color="#2196F3"
                android:width="2dp">
            </stroke>
            <gradient
                android:angle="270"
                android:startColor="#2196F3"
                android:endColor="#2196F3">

            </gradient>
        </shape>
    </item>

    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"></corners>
            <stroke
                android:color="#2196F3"
                android:width="2dp">
            </stroke>
            <gradient
                android:angle="270"
                android:startColor="#2196F3"
                android:endColor="#2196F3">

            </gradient>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"></corners>
            <stroke
                android:color="@color/recipelistcolor"
                android:width="2dp">
            </stroke>
            <gradient
                android:angle="270"
                android:startColor="@color/recipelistcolor"
                android:endColor="@color/recipelistcolor">

            </gradient>
        </shape>
    </item>
</selector>