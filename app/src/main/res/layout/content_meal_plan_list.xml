<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="0dp"
    android:background="@drawable/ingredient_list_item_background"
    android:elevation="20dp"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/meal_plan_list_item_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/dark_grey"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/meal_plan_list_item_unconfigured_textview"
            android:layout_weight="1"
            android:drawableStart="@android:drawable/stat_sys_warning"
            android:drawableTint="#FFC107"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description"
            android:textColor="@color/light_grey"
            android:textSize="20sp"
            android:gravity="center_vertical"
 />

    </LinearLayout>

</LinearLayout>