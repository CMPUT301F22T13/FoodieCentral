<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uilayer.ingredientstorage.IngredientViewFragment">

    <ImageView
        android:id="@+id/view_ingredient_picture_imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/noimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_ingredient_button"
        style="@style/FabButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/view_ingredient_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Ingredient Name"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_ingredient_picture_imageView" />

    <TextView
        android:id="@+id/view_ingredient_description_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Description"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/view_ingredient_description_textview"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/view_ingredient_description_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="None"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_ingredient_description_label_textview"
        app:layout_constraintTop_toBottomOf="@+id/view_ingredient_name_textview" />

    <TextView
        android:id="@+id/view_ingredient_bbd_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Best Before Date"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/view_ingredient_bbd_textview"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/view_ingredient_bbd_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="None"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/view_ingredient_description_textview"
        app:layout_constraintTop_toBottomOf="@+id/view_ingredient_description_textview" />

    <TextView
        android:id="@+id/view_ingredient_location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Location"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/view_ingredient_location_textview"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/view_ingredient_location_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="None"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/view_ingredient_bbd_textview"
        app:layout_constraintTop_toBottomOf="@+id/view_ingredient_bbd_textview" />

    <TextView
        android:id="@+id/view_ingredient_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Amount"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/view_ingredient_amount_textview"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/view_ingredient_amount_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="None"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/view_ingredient_location_textview"
        app:layout_constraintTop_toBottomOf="@+id/view_ingredient_location_textview" />

    <TextView
        android:id="@+id/view_ingredient_unit_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Unit"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/view_ingredient_unit_textview"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/view_ingredient_unit_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="None"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/view_ingredient_amount_textview"
        app:layout_constraintTop_toBottomOf="@+id/view_ingredient_amount_textview" />

    <TextView
        android:id="@+id/view_ingredient_category_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Category"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/view_ingredient_category_textview"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/view_ingredient_category_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="None"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/view_ingredient_unit_textview"
        app:layout_constraintTop_toBottomOf="@+id/view_ingredient_unit_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>